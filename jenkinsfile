node {
    def app

    stage('Clone repository') {
        checkout scm
    }

    stage('Update GIT') {
        script {
            catchError(buildResult: 'SUCCESS', stageResult: 'FAILURE') {
                withCredentials([usernamePassword(credentialsId: 'github', 
                                                   usernameVariable: 'GIT_USERNAME', 
                                                   passwordVariable: 'GIT_PASSWORD')]) {

                    // Set user config for Git
                    gitConfig("user.email", "hydar426@gmail.com")
                    gitConfig("user.name", "Hayder-alobaidi")

                    // Update deployment.yaml file
                    def dockerTag = "${DOCKERTAG}"
                    def deploymentFile = readFile 'manifest/deployment.yaml'
                    deploymentFile = deploymentFile.replaceAll(/hayder89\/web-app:.*/, "hayder89/web-app:${dockerTag}")
                    writeFile file: 'manifest/deployment.yaml', text: deploymentFile

                    // Git operations: Add changes, commit, and push securely using the environment variables
                    sh 'git add .'
                    sh "git commit -m 'Done by Jenkins Job update manifest: ${env.BUILD_NUMBER}'"
                    withCredentials([usernamePassword(credentialsId: 'github', 
                                                       usernameVariable: 'GIT_USERNAME', 
                                                       passwordVariable: 'GIT_PASSWORD')]) {
                        sh "git push https://${GIT_USERNAME}:${GIT_PASSWORD}@github.com/Hayder-alobaidi/P1-kubernetes_manifest.git HEAD:main"
                    }
                }
            }
        }
    }
}

def gitConfig(name, value) {
    sh "git config ${name} \"${value}\""
}

